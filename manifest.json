{
  "name": "UConn Student Admin Helper",
  "description": "Makes student admin much easier to use",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "browser_action": {
    "default_title": "Student Admin"
  },
  "manifest_version": 2
}
